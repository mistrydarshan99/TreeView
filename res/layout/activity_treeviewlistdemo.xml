<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:treeView="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >
	<com.abhan.example.treeviews.TreeViewList
		android:id="@+id/mainTreeView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:cacheColorHint="@android:color/transparent"
		android:fadingEdge="none"
		android:listSelector="@android:color/transparent"
		android:scrollbars="none"
		android:smoothScrollbar="false"
		treeView:collapsible="true"
		treeView:indent_width="0dp"
		treeView:indicator_background="@android:color/transparent"
		treeView:indicator_gravity="right|center_vertical"
		treeView:row_background="@android:color/transparent"
		treeView:src_collapsed="@null" />
</LinearLayout>